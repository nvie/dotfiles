# All options:
# - ghostty +show-config --default --docs
# - https://ghostty.org/docs/config
# - https://ghostty.org/docs/config/reference

# See: ghostty +list-fonts
font-family = Operator Mono
font-style = Medium

font-size = 20
adjust-cell-width = -5%
adjust-cell-height = 10%

# See: ghostty +list-themes
theme = SpaceGray Eighties
split-divider-color = #544E47

window-padding-balance = true
window-padding-x = 8,8
window-padding-y = 6,6
window-step-resize = true

# macos-titlebar-style = hidden
focus-follows-mouse = true

# Send alt+a as '\ea' (escape sequence) instead of the unicode char 'Ã¥'
macos-option-as-alt = true
background-opacity = 0.95
background-blur = true

# Custom key bindings
keybind = shift+enter=text:\n
# keybind = super+f=write_scrollback_file:open

# Allow scrolling terminal output with Page Up/Down, Home/End
keybind = page_up=scroll_page_up
keybind = page_down=scroll_page_down
keybind = home=scroll_to_top
keybind = end=scroll_to_bottom

# When in Vim, allow scrolling terminal output with Shift+Page Up/Down, Shift+Home/End
keybind = unconsumed:shift+page_up=scroll_page_up
keybind = unconsumed:shift+page_down=scroll_page_down
keybind = unconsumed:shift+home=scroll_to_top
keybind = unconsumed:shift+end=scroll_to_bottom
