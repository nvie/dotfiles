# See: ghostty +list-fonts
font-family = Operator Mono
font-style = Medium

font-size = 20
adjust-cell-width = -5%
adjust-cell-height = 10%

# See: ghostty +list-themes
theme = SpaceGray Eighties
split-divider-color = #544E47

window-padding-balance = true
window-padding-x = 8,8
window-padding-y = 6,6
window-step-resize = true

# macos-titlebar-style = hidden
focus-follows-mouse = true

# Send alt+a as '\ea' (escape sequence) instead of the unicode char 'Ã¥'
macos-option-as-alt = true
# background-opacity = 0.96
background-blur = true

# Custom key bindings
keybind = shift+enter=text:\n
# keybind = super+f=write_scrollback_file:open

# Allow scrolling terminal output with Shift+{PageUp/Down/Home/End}
keybind = shift+page_up=scroll_page_fractional:-0.3
keybind = shift+page_down=scroll_page_fractional:0.3
keybind = shift+home=scroll_to_top
keybind = shift+end=scroll_to_bottom
